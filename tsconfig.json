{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "src/database-firestore.ts", "src/routes/auth-firestore.ts", "src/routes/orders-firestore.ts", "src/routes/upload-firestore.ts", "src/routes/users-firestore.ts", "src/index.ts"]
}




